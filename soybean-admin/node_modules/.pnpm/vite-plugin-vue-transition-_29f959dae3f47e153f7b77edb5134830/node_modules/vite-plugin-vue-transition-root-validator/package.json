{
  "name": "vite-plugin-vue-transition-root-validator",
  "type": "module",
  "version": "0.0.4",
  "description": "Capture Vue <Transition> runtime warnings and show actionable overlay in Vite dev.",
  "keywords": [
    "azir",
    "vite",
    "vue",
    "vue-router",
    "router",
    "transition",
    "root",
    "validator"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./client": {
      "types": "./dist/client.d.ts",
      "import": "./dist/client.js"
    }
  },
  "scripts": {
    "build": "tsdown src/index.ts --format esm,cjs --dts --sourcemap --clean && mv dist/index-*.d.ts dist/index.d.ts && mv dist/index-*.d.cts dist/index.d.cts && tsdown src/client.ts --format esm --dts --sourcemap --no-clean && mv dist/client-*.d.ts dist/client.d.ts && publint",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json",
    "verify": "pnpm run build && attw --pack ."
  },
  "packageManager": "pnpm@10.14.0",
  "peerDependencies": {
    "vite": ">=4.0.0",
    "vue": ">=3.0.0"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.18.0",
    "@types/node": "^22.0.0",
    "publint": "^0.3.16",
    "tsdown": "^0.14.2",
    "typescript": "^5.8.0",
    "vite": "^5.0.0",
    "vitest": "^2.0.0",
    "vue": "^3.0.0"
  }
}
